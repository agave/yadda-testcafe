{
  "name": "bdd-tc",
  "version": "0.0.0",
  "description": "Codegen from Yadda features",
  "main": "lib/compiler.js",
  "bin": {
    "bdd-tc": "bin/cli"
  },
  "scripts": {
    "build": "bin/cli tests/e2e/features",
    "dev": "npm test -- -w",
    "lint": "eslint bin lib tests",
    "test": "npm run test:unit --",
    "test:ci": "npm run coverage:all && npm run report -- -r lcov",
    "test:e2e": "testcafe chrome:headless $(npm run build) --color",
    "test:all": "npm run test:run tests/unit && npm run report -- -r html",
    "test:run": "NODE_ENV=test _mocha --exit --recursive -bR spec",
    "test:unit": "npm run test:run tests/unit --",
    "coverage": "nyc -x '**/tests/**' -x '**/*.test.js'",
    "coverage:all": "npm run coverage -- npm run test:all",
    "coverage:unit": "npm run coverage -- npm run test:unit",
    "codecov": "codecov --file=coverage/lcov.info -e TRAVIS_NODE_VERSION",
    "e2e": "npm run build -- -- testcafe --take-snapshot --color -S -s tests/e2e/screenshots chrome:headless",
    "report:ui": "testcafe-blink-diff tests/e2e/screenshots --compare master:dev --force -t 0.10",
    "report": "nyc report",
    "pretest": "npm run lint"
  },
  "keywords": [
    "testcafe",
    "codegen",
    "yadda",
    "bdd"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pateketrueke/bdd-tc"
  },
  "bugs": "https://github.com/pateketrueke/bdd-tc/issues",
  "author": "Agave Lab <oss@agavelab.com> (https://agavelab.com)",
  "maintainers": [
    "Alvaro Cabrera <pateketrueke@gmail.com> (https://soypache.co)"
  ],
  "license": "MIT",
  "dependencies": {
    "fs-extra": "^7.0.1",
    "glob": "^7.1.3",
    "lodash.template": "^4.4.0",
    "rimraf": "^2.6.2",
    "wargs": "^0.8.2",
    "yadda": "^2.0.0"
  },
  "devDependencies": {
    "chai": "^4.2.0",
    "mocha": "^5.2.0",
    "mock-fs": "^4.7.0",
    "nyc": "^13.1.0",
    "testcafe": "^0.23.2",
    "testcafe-blink-diff": "^0.3.6",
    "testdouble": "^3.9.1"
  }
}
